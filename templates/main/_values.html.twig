<!-- Values Section -->
<section id="values" class="values section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Mes valeurs</h2>
        <p>Ce que j'appr√©cie le plus<br></p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row gy-4">

            {% for value in values %}
                <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="card">
                        <img src="{{ asset('assets/img/' ~ value.image) }}" class="img-fluid" alt="">
                        <h3>{{value.title}}</h3>
                        <p>{{value.description}}</p>
                    </div>
                </div><!-- End Card Item -->
            {% endfor %}

        </div>

    </div>

</section><!-- /Values Section -->