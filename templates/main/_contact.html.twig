<!-- Contact Section -->
<section id="contact" class="contact section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Contact</h2>
        <p>Contactez moi</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-4">

                <div class="row gy-4">

                    <div class="col-12">
                        <div class="info-item" data-aos="fade" data-aos-delay="300">
                            <i class="bi bi-telephone"></i>
                            <h3>Appelez-moi</h3>
                            <p><a href="tel:{{contact[0].phonenumber}}">{{contact[0].phonenumber}}</a></p>
                        </div>
                    </div><!-- End Info Item -->

                    <div class="col-12">
                        <div class="info-item" data-aos="fade" data-aos-delay="400">
                            <i class="bi bi-envelope"></i>
                            <h3>Envoyez-moi un email</h3>
                            <p><a href="mailto:{{contact[0].email}}">{{contact[0].email}}</a></p>
                        </div>
                    </div><!-- End Info Item -->

                </div>

            </div>

            <div class="col-lg-8">
                {{ form_start(form, { 'attr': {'id': 'form' , 'data-aos': 'fade-up', 'data-aos-delay': '200'}}) }}
                    <div class="row gy-4">
                        <div class="col-md-6">
                            {{form_widget (form.name, {'attr': {'class': 'form-control'}})}}
                        </div>
                        <div class="col-md-6">
                            {{form_widget (form.email, {'attr': {'class': 'form-control'}})}}
                        </div>
                        <div class="col-12">
                            {{form_widget (form.object, {'attr': {'class': 'form-control'}})}}
                        </div>
                        <div class="col-12">
                            {{form_widget (form.message, {'attr': {'class': 'form-control', 'rows': '6'}})}}
                        </div>
                        <div class="col-12 text-center">
                            {% for message in app.flashes('failed') %}
                                <div class="error-message">{{message}}</div>
                            {% endfor %}
                            {% for message in app.flashes('success') %}
                                <div class="sent-message alert alert-primary" style="background-color:#066EC7; color:#fff">{{message}}</div>
                            {% endfor %}

                            <button type="submit">Envoyer</button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div><!-- End Contact Form -->

        </div>

    </div>

</section><!-- /Contact Section -->