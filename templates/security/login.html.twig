{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <main class="main pt-5">
        <section class="section mt-5 contact">
            <div class="container section-title aos-init aos-animate">
                <h2>Connexion</h2>
                <p>Veuillez vous connecter</p>
            </div>
            <div class="container aos-init aos-animate">
                <div class="row gy-4 justify-content-center">
                    <div class="col-lg-8">
                        <form method="post">
                            <div class="row gy-4">
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                {% if app.user %}
                                    <div class="mb-3">
                                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                                    </div>
                                {% endif %}
                                {# <label for="username">Username</label> #}
                                <input type="text" value="{{ last_username }}" name="_username" id="username" placeholder="Username" class="form-control" autocomplete="username" required autofocus>
                                {# <label for="password">Mot de passe</label> #}
                                <input type="password" name="_password" id="password" placeholder="Mot de passe" class="form-control" autocomplete="current-password" required>

                                <input type="hidden" name="_csrf_token"
                                    value="{{ csrf_token('authenticate') }}"
                                >

                                {#
                                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                    See https://symfony.com/doc/current/security/remember_me.html

                                    <div class="checkbox mb-3">
                                        <input type="checkbox" name="_remember_me" id="_remember_me">
                                        <label for="_remember_me">Remember me</label>
                                    </div>
                                #}
                                <div class="col-12 text-center">
                                    <button type="submit">
                                        Se connecter
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
